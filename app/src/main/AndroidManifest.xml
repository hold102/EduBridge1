<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- ✅ Android 13+ 需要通知权限（targetSdk 34 必加） -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduBridge"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".VerifyEmailActivity" />
        <activity android:name=".ResetPasswordActivity" />

        <activity android:name=".DashboardActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".ContentLibraryActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".CommunityActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity android:name=".CourseDetailActivity" />
        <activity android:name=".PostDetailActivity" />
        <activity android:name=".DailyCheckInActivity" />
        <activity android:name=".HomeworkHelperActivity" />
        <activity android:name=".VoiceConversationActivity" />
        <activity android:name=".StudyPlannerActivity" />
        <activity android:name=".LearningBuddyActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".CreatePostActivity" />

        <activity android:name=".BadgesActivity" />
        <activity android:name=".LeaderboardActivity" />

        <!-- ✅ 必须注册：FCM 接收 Service -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>