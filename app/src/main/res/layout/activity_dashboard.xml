<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main">


    <!-- ================= Content ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back,"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textColor="@color/brand_black"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/btn_home"
                    android:layout_width="44dp"
                    android:layout_height="44dp"

                    android:layout_marginStart="-18dp"

                    android:layout_marginTop="-4dp"
                    android:layout_gravity="center_vertical"

                    android:src="@drawable/ic_home"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!-- Points card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="40dp"
                    app:cardBackgroundColor="@color/bg_main"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/brand_black"
                    app:strokeWidth="1.5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="6dp"
                            android:src="@android:drawable/btn_star_big_on"
                            app:tint="#FFC107" />
                        <TextView
                            android:id="@+id/tv_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Points: 0"
                            android:textColor="@color/brand_black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <!-- Streak -->
                <LinearLayout
                    android:id="@+id/layout_streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_outline"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_streak_fire" />

                    <TextView
                        android:id="@+id/tv_streak_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Days"
                        android:textColor="@color/brand_black"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Notification -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/btn_notification"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="top"
            android:src="@drawable/ic_notification"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="40dp">

            <!-- Recommended Course (M2.2) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended for You"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/brand_black"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingEnd="16dp"
                android:layout_marginBottom="24dp" />

            <!-- Daily Tip End -->

            <!-- ================= ACHIEVEMENT SUMMARY (M2.4) ================= -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Achievements"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/brand_black"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/brand_black"
                app:strokeWidth="2dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/bg_card"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- XP Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_achievement_trophy"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/tv_achievement_xp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0 XP"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/brand_black" />

                        <TextView
                            android:id="@+id/tv_badge_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/5 Badges"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <!-- Recent Badges -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Badges"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/layout_recent_badges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>

                    <!-- View All Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_view_all_badges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View All Achievements"
                        android:textColor="@color/brand_white"
                        app:backgroundTint="@color/brand_black"
                        app:cornerRadius="8dp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= LEVEL PROGRESSION (M4.2) ================= -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Level"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/brand_black"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/brand_black"
                app:strokeWidth="2dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/bg_card"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Level Badge -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="32dp"
                        app:cardBackgroundColor="@color/brand_black"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_level_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/brand_white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LVL"
                                android:textSize="10sp"
                                android:textColor="@color/brand_white"
                                android:alpha="0.8" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Level Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_level_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beginner"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/brand_black" />

                        <TextView
                            android:id="@+id/tv_level_xp_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 / 100 XP to next level"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp" />

                        <!-- Progress Bar -->
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/pb_level_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:indicatorColor="@color/brand_black"
                            app:trackColor="#E0E0E0"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="8dp"
                            android:progress="0" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= PROGRESS DASHBOARD (M2.1) ================= -->
            <!--
                 Displays overall progress summary and list of courses with progress.
                 Populated by DashboardActivity via CourseProgressAdapter.
            -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learning Progress"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/brand_black"
                android:layout_marginBottom="12dp" />

            <!-- Overall Progress Summary -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_input_outline"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Overall Completion"
                        android:textStyle="bold"
                        android:textColor="@color/brand_black"/>

                    <TextView
                        android:id="@+id/tv_overall_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textStyle="bold"
                        android:textColor="@color/brand_black" />
                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/pb_overall_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:trackCornerRadius="4dp"
                    app:indicatorColor="@color/brand_black"
                    app:trackColor="#E0E0E0"
                    android:progress="0"
                    android:max="100" />
            </LinearLayout>

            <!-- My Courses List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:background="@drawable/bg_input_outline"
                android:padding="8dp"
                android:layout_marginBottom="24dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_course_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/brand_black"
                android:layout_marginBottom="16dp" />

            <!-- âœ… FULL GridLayout (all ids exist) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="4"
                android:useDefaultMargins="false"
                android:alignmentMode="alignMargins">

                <!-- Library -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_content_library"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/brand_black"
                    app:strokeWidth="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_nav_library"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Library"
                            android:textStyle="bold"
                            android:textColor="@color/brand_black" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Community -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_community"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/brand_black"
                    app:strokeWidth="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_nav_community"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Community"
                            android:textStyle="bold"
                            android:textColor="@color/brand_black" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- AI Buddy -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_learning_buddy"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/brand_black"
                    app:strokeWidth="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_ai_buddy_avatar"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Buddy"
                            android:textStyle="bold"
                            android:textColor="@color/brand_black" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Planner -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_study_planner"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/brand_black"
                    app:strokeWidth="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_study_plan"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Planner"
                            android:textStyle="bold"
                            android:textColor="@color/brand_black" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Profile -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_profile"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/brand_black"
                    app:strokeWidth="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_hero_student"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textStyle="bold"
                            android:textColor="@color/brand_black" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Settings -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_settings"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/brand_black"
                    app:strokeWidth="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_settings_gear"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textStyle="bold"
                            android:textColor="@color/brand_black" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Badges -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_badges"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/brand_black"
                    app:strokeWidth="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/btn_star_big_on"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Badges"
                            android:textStyle="bold"
                            android:textColor="@color/brand_black" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Courses"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/brand_black"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:id="@+id/layout_enrolled_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>