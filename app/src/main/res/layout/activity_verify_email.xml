<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_verify_email"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Your Email"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have sent a verification link to your email.\n\nPlease click the link in your email first."
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Hint -->
    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="After verifying, tap Continue to proceed."
        android:textSize="13sp"
        android:textColor="#888888"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- âœ… Continue Button (ALWAYS visible, colored) -->
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="CONTINUE"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#1565C0"
        android:layout_marginBottom="18dp" />

    <!-- Resend -->
    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Email"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:minHeight="48dp"
        android:minWidth="200dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Logout -->
    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="12dp"
        android:minHeight="48dp"
        android:minWidth="200dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>



