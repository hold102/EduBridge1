<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/bg_card"
    app:strokeColor="@color/stroke_color"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Module Header -->
        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground">

            <!-- Module Number -->
            <TextView
                android:id="@+id/tv_module_number"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:background="@drawable/bg_bubble_user"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module Title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/brand_black"/>

                <TextView
                    android:id="@+id/tv_lesson_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 lessons"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <!-- Lock/Complete Icon -->
            <ImageView
                android:id="@+id/img_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/checkbox_on_background"
                app:tint="#4CAF50"/>

            <!-- Expand Arrow -->
            <ImageView
                android:id="@+id/img_expand"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="@color/text_hint"/>
        </LinearLayout>

        <!-- Lessons Container (expandable) -->
        <LinearLayout
            android:id="@+id/layout_lessons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingHorizontal="14dp"
            android:paddingBottom="14dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
