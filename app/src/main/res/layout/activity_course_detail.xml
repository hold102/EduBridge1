<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/bg_main">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/brand_black"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/brand_black"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Course Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/bg_card"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Thumbnail (FIXED) -->
                    <ImageView
                        android:id="@+id/img_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="14dp"
                        android:background="#E8E8E8"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_nav_library"
                        android:clipToPadding="false" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Badges Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:id="@+id/tv_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_category_chip"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="Mathematics"
                                android:textColor="@color/brand_black"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tv_difficulty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/bg_badge_difficulty"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="Beginner"
                                android:textColor="@android:color/white"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Title -->
                        <TextView
                            android:id="@+id/tv_course_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Course Title"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/brand_black" />

                        <!-- Description -->
                        <TextView
                            android:id="@+id/tv_course_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Course description..."
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <!-- Meta Info Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Duration"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tv_duration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4 hours"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/brand_black" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/stroke_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lessons"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tv_lessons"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/brand_black" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/stroke_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Effort"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_hint" />

                                <TextView
                                    android:id="@+id/tv_effort"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2-3 hrs/wk"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/brand_black" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Enrollment Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_enrollment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E8F5E9"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_enrollment_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enrolled"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32" />

                        <TextView
                            android:id="@+id/tv_progress_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35%"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32" />
                    </LinearLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:trackCornerRadius="4dp"
                        app:indicatorColor="#4CAF50"
                        app:trackColor="#C8E6C9"
                        android:progress="35" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_continue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Continue Learning"
                        app:backgroundTint="#4CAF50"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_unenroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Unenroll from Course"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="#BDBDBD"
                        app:cornerRadius="8dp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tv_enrolled_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Enrolled on: Jan 1, 2025"
                        android:textSize="11sp"
                        android:textColor="#9E9E9E"
                        android:layout_gravity="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Not Enrolled Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_not_enrolled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/bg_card"
                app:strokeColor="@color/stroke_color"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start your learning journey"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_enroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Enroll Now"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/brand_black"
                        app:cornerRadius="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Instructor -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/brand_black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/bg_card"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_instructor"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_nav_community"
                        android:background="@drawable/bg_category_chip"
                        android:padding="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tv_instructor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. John Smith"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/brand_black" />

                        <TextView
                            android:id="@+id/tv_instructor_bio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expert in Mathematics"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Objectives -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What You Will Learn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/brand_black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/bg_card"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_objectives"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:text="• Master fundamental concepts\n• Apply knowledge to real problems\n• Build practical skills"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Prerequisites -->
            <TextView
                android:id="@+id/tv_prereq_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prerequisites"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/brand_black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_prerequisites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFF3E0"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_prerequisites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:text="Basic math knowledge recommended"
                    android:textSize="14sp"
                    android:textColor="#E65100" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Syllabus -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Syllabus"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/brand_black"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_syllabus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>