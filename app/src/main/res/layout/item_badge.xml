<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_badge_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@android:drawable/star_big_off"
            android:contentDescription="Badge icon"
            android:layout_marginEnd="14dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_badge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Badge Title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/tv_badge_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_badge_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCKED"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/brand_black"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>