<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_black">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_margin="24dp"
        android:padding="8dp"
        android:background="@drawable/bg_input_outline"
        android:backgroundTint="@color/brand_white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera Viewfinder\n(Simulated)"
        android:textColor="@color/white_opacity_90"
        android:layout_centerInParent="true"
        android:gravity="center"/>

    <View
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_input_outline"
        android:backgroundTint="@color/transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/btn_shutter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_input_outline"
            android:backgroundTint="@color/brand_white"/>

    </LinearLayout>

</RelativeLayout>