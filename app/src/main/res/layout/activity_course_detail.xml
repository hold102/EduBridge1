<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/brand_black"/>

        <TextView
            android:layout_marginStart="16dp"
            android:text="Course Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/brand_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Course Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/brand_black"
                app:strokeWidth="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_course_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/ic_subject_math"/>

                    <TextView
                        android:id="@+id/tv_course_title"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/brand_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_course_desc"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Instructor -->
                    <TextView
                        android:id="@+id/tv_instructor"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Duration -->
                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Rating -->
                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RatingBar
                        android:id="@+id/ratingBar_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:layout_marginTop="8dp"/>

                    <!-- Resume / Complete Lesson -->
                    <!-- Action Buttons: Enroll / Resume + Cancel -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <!-- Enroll / Resume Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_start_course"
                            android:text="Resume Learning"
                            android:textColor="@color/brand_white"
                            app:backgroundTint="@color/brand_black"
                            app:cornerRadius="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <!-- Cancel / Unenroll Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancel_course"
                            android:text="Cancel"
                            android:textColor="@color/brand_black"
                            app:backgroundTint="@color/brand_white"
                            app:strokeColor="@color/brand_black"
                            app:strokeWidth="2dp"
                            app:cornerRadius="20dp"
                            android:layout_marginStart="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===================== MODULE SECTION ===================== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/brand_black"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Module Header -->
                    <TextView
                        android:text="MODULE 1"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Core Learning Module"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/brand_black"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Lesson 1 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/text_secondary"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:text="Lesson 1"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <!-- IMPORTANT: ID unchanged -->
                            <TextView
                                android:id="@+id/tv_chapter_1"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/brand_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Activity: Text-based Learning"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Lesson 2 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/text_secondary"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:text="Lesson 2"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <!-- IMPORTANT: ID unchanged -->
                            <TextView
                                android:id="@+id/tv_chapter_2"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/brand_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Activity: Quiz-based Learning"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Prerequisites -->
            <TextView
                android:text="Prerequisites"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_prerequisites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
