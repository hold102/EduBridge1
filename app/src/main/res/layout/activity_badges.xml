<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Badges"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Summary Header (M2.4) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/brand_black"
        app:strokeWidth="2dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/bg_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_achievement_trophy"
                android:layout_marginEnd="16dp"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_badges_xp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 XP"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/brand_black" />

                <TextView
                    android:id="@+id/tv_badges_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/5 Badges Earned"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_badges"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:clipToPadding="false" />
</LinearLayout>